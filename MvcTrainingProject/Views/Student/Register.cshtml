@model MvcTrainingProject.Models.Student

@{
    ViewBag.Title = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">

                <h2 class="text-center fw-bold mb-1">Student Registration</h2>
                <p class="text-center text-muted mb-4">Fill in your details below</p>

                @using (Html.BeginForm("Register", "Student", FormMethod.Post, 
                    new { autocomplete = "off" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.FullName, 
                                new { @class = "form-control form-control-lg", 
                                      autocomplete = "off",
                                      placeholder = "John Doe" })
                            @Html.ValidationMessageFor(m => m.FullName, "", 
                                new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Email, 
                                new { @class = "form-control form-control-lg",
                                      type = "email",
                                      autocomplete = "off",
                                      placeholder = "john@example.com" })
                            @Html.ValidationMessageFor(m => m.Email, "", 
                                new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.Password, 
                                new { @class = "form-control form-control-lg",
                                      autocomplete = "new-password",
                                      placeholder = "****" })
                            @Html.ValidationMessageFor(m => m.Password, "", 
                                new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.City, new { @class = "form-label fw-semibold" })
                            @Html.DropDownListFor(m => m.City,
                                new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="Select City", Value="" },
                                    new SelectListItem{ Text="Mumbai", Value="Mumbai" },
                                    new SelectListItem{ Text="Delhi", Value="Delhi" },
                                    new SelectListItem{ Text="Pune", Value="Pune" },
                                    new SelectListItem{ Text="Indore", Value="Indore" }
                                },
                                new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.City, "", 
                                new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Address, new { @class = "form-label fw-semibold" })
                        @Html.TextAreaFor(m => m.Address, 
                            new { @class = "form-control form-control-lg",
                                  rows = 3,
                                  autocomplete = "off",
                                  placeholder = "Enter your address" })
                        @Html.ValidationMessageFor(m => m.Address, "", 
                            new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Gender</label>
                        <div class="d-flex gap-4">
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.Gender, "Male", 
                                    new { @class = "form-check-input" })
                                <label class="form-check-label">Male</label>
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.Gender, "Female", 
                                    new { @class = "form-check-input" })
                                <label class="form-check-label">Female</label>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Gender, "", 
                            new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-3">
                            Register
                        </button>
                    </div>

                    if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success mt-3">
                            @ViewBag.Success
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>