@{
    ViewBag.Title = "Home";
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome to Student Portal</h1>
        <p class="lead">
            A simple and structured web application built using ASP.NET MVC architecture.
        </p>

        <a href="/Student/Register" class="btn btn-primary btn-lg mt-3">
            Register Now
        </a>
    </div>

    <hr />

    <!-- Features Section -->
    <div class="row text-center mt-5">

        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm">
                <h4>📋 Easy Registration</h4>
                <p>
                    Students can quickly register using a simple and clean form interface.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm">
                <h4>⚙ MVC Architecture</h4>
                <p>
                    Built using Model-View-Controller pattern for structured development.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm">
                <h4>🎨 Modern UI</h4>
                <p>
                    Styled using Bootstrap for responsive and professional design.
                </p>
            </div>
        </div>

    </div>

    <hr class="mt-5" />

    <!-- About Preview Section -->
    <div class="mt-5 text-center">
        <h3>About Our Portal</h3>
        <p>
            This portal demonstrates how ASP.NET MVC applications are structured 
            with controllers, views, routing and HTML helpers.
        </p>

        <a href="/Home/About" class="btn btn-outline-primary mt-2">
            Learn More
        </a>
    </div>

</div>